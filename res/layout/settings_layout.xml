<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.steamitemwatcher.Settings" >

	<TextView
	    android:id="@+id/itemname"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/update_time"
	    android:layout_alignParentTop="true"
	    android:text="Check prices once per"
	    android:textSize="20sp" />

	<Spinner
	    android:id="@id/update_time"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/itemname" 
	    android:layout_marginBottom="30dp"
	   />
	
	<Button
	    android:id="@+id/setAlarm"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:layout_below="@+id/update_time"
	    android:layout_centerHorizontal="true"
	    android:layout_marginBottom="30dp"
	    android:text="Start Recording"
	    android:onClick="setAlarm"
	    />
	    
	<Button
	    android:id="@+id/killAlarm"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:layout_below="@id/setAlarm"
	    android:layout_centerHorizontal="true"
	    android:layout_marginBottom="30dp"
	    android:text="Stop Recording"
	    android:onClick="killAlarm"
	    />
	
	

</RelativeLayout>